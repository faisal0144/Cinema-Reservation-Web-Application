<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Available Movies</title>
    <!-- Link to the external CSS file -->
    <link rel="stylesheet" href="styles.css">
    <!-- Tailwind CSS CDN -->
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="flex flex-col items-center min-h-screen p-8">

    <!-- Main container for the movie page -->
    <div class="container mx-auto">

        <!-- Page Header -->
        <header class="text-center mb-12">
            <h1 class="text-4xl font-extrabold text-white">Now Showing</h1>
            <p class="text-gray-400 mt-2 text-lg">Book your seats for today's top movies!</p>
        </header>

        <!-- Movie Grid -->
        <div class="movie-grid">
            {{#each movies}}
            <div class="movie-card group">
                <img src="{{this.poster}}" alt="Movie Poster" class="movie-poster">
                <div class="p-4">
                    <h2 class="movie-title">{{this.title}}</h2>
                    <p class="movie-genre">{{this.genre}}</p>
                    <div class="mt-4">
                        <a href="/showtimes?movieId={{this._id}}">
                            <button class="movie-button">Book Now</button>
                        </a>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>

    </div>
</body>
</html>
