
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Cinema Authentication</title>
    <!-- Link to the external CSS file -->
    <link rel="stylesheet" href="styles.css">
    <!-- Tailwind CSS CDN -->
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="flex items-center justify-center min-h-screen">

    <!-- Main container for the auth page -->
    <div class="card">

        <!-- Logo/Title section -->
        <div class="card-header">
            <h1 class="card-title">Cinema Bookings</h1>
            <p class="card-subtitle">Book your perfect movie experience.</p>
        </div>
              <!-- Warning Message Area -->
        {{#if error}}
        <div class="warning-message" id="warning">
            {{error}}
        </div>
        {{else}}
        <div class="warning-message hidden" id="warning">
            An error occurred. Please try again.
        </div>
        {{/if}}
        <!-- Login Form -->
        <form id="login-form" action="/login" method="post" class="form">
            <div class="form-group">
                <label for="login-email" class="form-label">Email Address</label>
                <div class="mt-1">
                    <input id="login-email" name="email" type="email" autocomplete="email" required
                        class="form-input">
                </div>
            </div>

            <div class="form-group">
                <label for="login-password" class="form-label">Password</label>
                <div class="mt-1">
                    <input id="login-password" name="password" type="password" autocomplete="current-password" required
                        class="form-input">
                </div>
            </div>


            <div>
                <button type="submit" class="form-button">
                    Sign In
                </button>
            </div>
        </form>

        <!-- Link to a separate signup page if needed -->
        <div class="card-footer">
            Don't have an account? <a href="/signup" class="form-link">Sign Up</a>
        </div>

    </div>

    <script>
        document.getElementById('login-form').addEventListener('submit', async function(e) {
            e.preventDefault();
            
            const formData = new FormData(this);
            const warningDiv = document.getElementById('warning');
            
            try {
                const response = await fetch('/login', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({
                        email: formData.get('email'),
                        password: formData.get('password')
                    })
                });
                
                if (response.redirected) {
                    // If the server redirected, follow the redirect
                    window.location.href = response.url;
                } else if (response.ok) {
                    // If successful but no redirect, redirect to main page
                    window.location.href = '/main';
                }
            }
        });
    </script>
</body>
</html>
