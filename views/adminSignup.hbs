<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Cinema Admin Registration</title>
    <!-- Link to the external CSS file -->
    <link rel="stylesheet" href="styles.css">
    <!-- Tailwind CSS CDN -->
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="flex items-center justify-center min-h-screen">

    <!-- Main container for the auth page, reusing the 'card' class -->
    <div class="card">

        <!-- Header section, updated for the admin page -->
        <div class="card-header">
            <h1 class="card-title">Admin Registration</h1>
            <p class="card-subtitle">Create a new administrator account.</p>
        </div>

        {{#if error}}
        <div class="warning-message" id="warning">
           {{error}}
        </div>
        {{/if}}
        <!-- Admin Signup Form -->
        <form id="admin-signup-form" action="/admin-signup" method="post" class="form">
            <div class="form-group">
                <label for="admin-email" class="form-label">Email Address</label>
                <div class="mt-1">
                    <input id="admin-email" name="email" type="email" autocomplete="email" required
                        class="form-input">
                </div>
            </div>

            <div class="form-group">
                <label for="admin-password" class="form-label">Password</label>
                <div class="mt-1">
                    <input id="admin-password" name="password" type="password" autocomplete="new-password" required
                        class="form-input">
                </div>
            </div>
            
            <div class="form-group">
                <label for="confirm-password" class="form-label">Confirm Password</label>
                <div class="mt-1">
                    <input id="confirm-password" name="confirm_password" type="password" autocomplete="new-password" required
                        class="form-input">
                </div>
            </div>

            <!-- New field for the Admin Key -->
            <div class="form-group">
                <label for="admin-key" class="form-label">Admin Key</label>
                <div class="mt-1">
                    <input id="admin-key" name="admin_key" type="password" required
                        class="form-input">
                </div>
            </div>

            <div>
                <button type="submit" class="form-button">
                    Register as Admin
                </button>
            </div>
        </form>

        <!-- Footer link back to the login page -->
        <div class="card-footer">
            Already have an account? <a href="/admin-login" class="form-link">Sign In</a>
        </div>

    </div>
</body>
</html>
